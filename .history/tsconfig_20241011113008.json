{
    "compilerOptions": {
        "target": "es2020", // Target modern browsers
        "module": "es2020", // Use ES2020 module system
        "lib": ["dom", "es2020"], // Support for browser APIs and modern syntax
        "strict": true, // Enable all strict type checking options
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Disallow inconsistencies in casing
        "baseUrl": ".", // Base URL for module resolution
        "paths": {
            "@/*": ["./src/*"] // Alias for the src directory
        },
        "moduleResolution": "node", // Correct module resolution
        "composite": true, // Enable composite project support
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Path for build info files
        "outDir": "./dist" // Directory for compiled files
    },
    "include": [
        "src/**/*.ts", // Include all TypeScript files
        "src/**/*.tsx", // Include all TSX files (if using React)
        "src/**/*.vue", // Include all Vue files
        "src/main.ts", // Include the main entry file
        "env.d.ts" // Include the environment declarations
    ],
    "exclude": [
        "node_modules", // Exclude node_modules directory
        "src/**/__tests__/*" // Exclude test files
    ]
}
